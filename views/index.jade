extends layout

block body
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
    .navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") Starships
    
  .container      
    div(ng-controller='AppCtrl')
      table
        tr
          td Model
          td Manufacturer
          td Crew
          td Last Modification Date
          td
        tr(ng-repeat="x in starships | orderBy:'crew':true ")
          td {{ x.model }}
          td {{ x.manufacturer }}
          td 
            input(ng-model="x.crew")
          td {{ x.lastModification | date}}
          td
            button.pull-right.btn.btn-success(type="button" , ng-click="submit(x)") Update
    hr  
    div
      | Mini Project
      span(app-version)

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-route.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/jquery/jquery-2.0.3.min.js')
  script(src='bootstrap/js/bootstrap.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
